# x402 ZK Prover Service - Development Configuration

# Server Configuration
PORT=8080
GIN_MODE=debug

# Logging
LOG_LEVEL=debug
LOG_FORMAT=text

# Authentication (disabled in development)
API_KEY=
ALLOWED_ORIGINS=*

# Rate Limiting (relaxed for development)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Proof Cache
CACHE_SIZE=100
CACHE_TTL_SECONDS=3600

# Database
DATABASE_PATH=./proofs_dev.db
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_CONNECTIONS=2

# Circuit Configuration
CIRCUIT_PATH=./circuit/payment_proof.r1cs
PROVING_KEY_PATH=./circuit/payment_proof.zkey
VERIFICATION_KEY_PATH=./circuit/verification_key.json

# Security (disabled for development)
ENABLE_HSTS=false
ENABLE_API_AUTH=false
MAX_REQUEST_SIZE_MB=10

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Performance
MAX_PROOF_GENERATION_TIME_SECONDS=60
ENABLE_PROOF_VERIFICATION=true

# Maintenance
CLEANUP_INTERVAL_HOURS=24
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./backups

# TLS/SSL (disabled for development)
ENABLE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=
