# x402 ZK Prover Service - Production Configuration

# Server Configuration
PORT=8080
GIN_MODE=release

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Authentication
API_KEY=your_secure_api_key_here_change_this_in_production
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Proof Cache
CACHE_SIZE=5000
CACHE_TTL_SECONDS=7200

# Database
DATABASE_PATH=./proofs.db
DATABASE_MAX_CONNECTIONS=25
DATABASE_IDLE_CONNECTIONS=5

# Circuit Configuration
CIRCUIT_PATH=./circuit/payment_proof.r1cs
PROVING_KEY_PATH=./circuit/payment_proof.zkey
VERIFICATION_KEY_PATH=./circuit/verification_key.json

# Security
ENABLE_HSTS=true
ENABLE_API_AUTH=true
MAX_REQUEST_SIZE_MB=10

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Performance
MAX_PROOF_GENERATION_TIME_SECONDS=30
ENABLE_PROOF_VERIFICATION=true

# Maintenance
CLEANUP_INTERVAL_HOURS=1
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./backups

# TLS/SSL (if not using reverse proxy)
ENABLE_TLS=false
TLS_CERT_PATH=
TLS_KEY_PATH=
